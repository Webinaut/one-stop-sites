---
import { Image } from "astro:assets";
const { title, url, tags, hero, desktop, mobile, summary, description } =
  Astro.props;
---

<article>
  <div class="grid">
    <div>
      <Image src={desktop} alt={title} />
      <Image src={mobile} alt={title} />
    </div>
    <div>
      <h2>{title}</h2>
      <p>{description}</p>
      <p>{summary}</p>
      <a href={url} role="button" class="outline">View Project</a>
    </div>
  </div>
</article>
<style>
  article {
    padding-left: 0%;
    padding-right: 0%;
  }
</style>
